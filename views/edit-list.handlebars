<h1>I'm the edit shopping list page</h1>

<div id="shoplist">
    <form action="/edit-list" method="POST">
        <fieldset>
            <label for="shoppingListName">Shopping List Name:</label>
            <input type="text" id="shoppingListName" name="shoppingListName" value="{{nameList}}">

            <br>
            <br>
            <br>

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort by Category</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/edit-list?ascending=Ascending">Ascending</a>
                    <a class="dropdown-item" href="/edit-list?descending=Descending">Descending</a>
                </div>
            </div>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each context}}
                        <tr>
                            <td>{{ itemName }}</td>
                            <td>{{ categoryName }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>





            <label for="addItem">+ Item</label>
            <input type="text" id="addItem" name="addItem">

            <button type="button" class="btn btn-success" onclick="chooseItemList()">Add Item</button>

        </fieldset>



    </form>
</div>

<div id="blur">

</div>



<div class="jumbotron" id = "itemlist" display="none">
    {{#each context}}
    <div class="card bg-light mb-3" style="height:200px; width: 200px;">
        <img class="card-img-top" src="/images" alt="No Image Found">
        <div class="card-block">
            <h4 class="card-title">{{ itemName }}e</h4>
            <button type="button" class="btn btn-success">Add Item</button>
        </div>
    </div>
    {{/each}}

</div>

<script src="edit-listfun.js">
</script>




