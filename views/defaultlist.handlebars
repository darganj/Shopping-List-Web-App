<h1> Hello, welcome to the Items Catalog! </h1>




<br /><br />
<div>
    <h2> Add Items to List from Default List</h2>
    <table class="default_list_table">
        <thead>
            <tr>
                <th> Item Name: </th>
                <th> Add to Current List: </th>
            </tr>
        </thead>
        <tbody>
            {{#if defaultItemsList}}
            {{#each defaultItemsList}}
            <tr>
                <td> {{itemName}} </td>
                <td>
                    <form action="/shoppinglist" method="post">
                        <label>
                            Quantity:
                            <input style="width:40px;" type="number" name="quantity">
                        </label>
                        <label>
                            <input style="width:40px;" type="number" name="listID">
                        </label>
                        <input style="display:none;" type="number" name="itemID" value="{{itemID}}">
                        <input class="btn btn-primary my-2 my-sm-0" type="submit" value="Add to Shopping List">
                    </form>
                </td>
                <td class="dl_hidden_cell"> {{itemID}} </td>
                <td class="dl_hidden_cell"> {{categoryID}} </td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>

